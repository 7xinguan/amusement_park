<!--index.wxml-->
<view class='serach'>
<view class="searchB" bindtap='enterSearch'>
<!-- <input type="text" placeholder="搜索商品" placeholder-class="input-text"/>  -->
<image src='../../assets/icons/search.png'></image>
<text class='txtColor'>搜索</text>
</view>
</view>

<view class='myCont'>
<swiper indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" indicator-active-color="{{indicatoractivecolor}}">
  <block wx:for="{{imgUrls}}" wx:key='{{index}}'>
    <swiper-item >
      <image src="{{item}}" class="slide-image" />
    </swiper-item>
  </block>
</swiper>

<view class='hotList'>
<view bindtap='allClass'><image  src='../../assets/imgs/home_hotbar_ic_introduction.png'></image> <text>项目分类</text> </view>
<view bindtap='hotGoods'><image  src='../../assets/imgs/home_hotbar_ic_guidance.png'></image> <text>游览导航</text></view>
<view bindtap='myOrder'><image  src='../../assets/imgs/home_hotbar_ic_reserve.png'></image> <text>我的预约</text></view>
<view bindtap='mgFavor'><image  src='../../assets/imgs/home_hotbar_ic_favor.png'></image> <text>我的收藏</text></view>
</view>

<view class='shopSection'>

<view class='shopTitle'>
<image  src='../../assets/icons/home_list_ic_hot.png'></image> <text>热玩项目</text>
</view>

<view class='shopList'>
  <view class="container">
    <!--轮播图-->
  <swiper class="home-swiper" indicator-dots="true" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for-items="{{lunboData}}">
      <swiper-item>
        <image src="{{item.imgurl}}" class="slide-image" />
      </swiper-item>
    </block>
  </swiper>
</view>


</view>
<view class='bottomLine'> <text>我们也是有底线的</text></view>

</view>


</view>
